NAME_ASM			= asm
DIR_SRC				= sources/$(NAME_ASM)
DIR_OBJ 			= objects
DIR_INC 			= includes

DIR_LIBFT 			= libft
NAME_LIBFT			= $(DIR_LIBFT)/libft.a
DIR_INC_LIBFT		= $(DIR_LIBFT)/includes

DIR_FT_PRINTF 		= ft_printf
NAME_FT_PRINTF		= $(DIR_FT_PRINTF)/libftprintf.a
DIR_INC_PRINTF		= $(DIR_FT_PRINTF)/includes

SRC_LIST_ASM 	= 	DEBUG.c\
					add_item.c\
					asm.c\
					check_char.c\
					check_command.c\
					get_next_line_asm.c\
					error.c\
					exit_func.c\
					init.c\
					files.c\
					parse.c\
					parse_command.c\
					parse_operator.c\
					read_file.c\
					utils.c\
					write_file.c

HEADERS				= asm.h op.h

SRC_ASM			= $(addprefix $(DIR_SRC)/, $(SRC_LIST_ASM))
OBJ_ASM			= $(addprefix $(DIR_OBJ)/, $(SRC_LIST_ASM:.c=.o))
INC				= $(addprefix $(DIR_INC)/, $(HEADERS))

FLAGS			= -Wall -Wextra -Werror -g
GCC_LIBFT 		= -L $(DIR_LIBFT) -lft
GCC_FT_PRINTF	= -L $(DIR_FT_PRINTF) -lftprintf

all: $(NAME_ASM)

$(NAME_ASM): $(DIR_OBJ) $(OBJ_ASM) $(NAME_LIBFT) $(NAME_FT_PRINTF) $(INC)
	@gcc $(FLAGS) $(OBJ_ASM) -o $(NAME_ASM) $(GCC_LIBFT) $(GCC_FT_PRINTF)

$(DIR_OBJ):
	@mkdir -p $(DIR_OBJ)

$(NAME_LIBFT):
	@make -C $(DIR_LIBFT)/

$(NAME_FT_PRINTF):
	@make -C $(DIR_FT_PRINTF)/

$(DIR_OBJ)/%.o: $(DIR_SRC)/%.c $(INC)
	@gcc -c -I $(DIR_INC) -I $(DIR_INC_LIBFT) -I $(DIR_INC_PRINTF) $(FLAGS) $< -o $@

clean:
	@/bin/rm -rf $(DIR_OBJ)
	@make clean -C $(DIR_LIBFT)/
	@make clean -C $(DIR_FT_PRINTF)/

fclean: clean
	@/bin/rm -f $(NAME_ASM)
	@make fclean -C $(DIR_LIBFT)/
	@make fclean -C $(DIR_FT_PRINTF)/

re: fclean all

.PHONY: all clean fclean re